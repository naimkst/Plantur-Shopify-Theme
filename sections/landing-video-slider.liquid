<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"
>

<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-element-bundle.min.js"></script>

<style>
  .slider-container {
    max-width: ;
  }
  .slider-item {
    display: flex;
  }
  .detail-section {
    background: #c12352;
    width: 60%;
    text-align: center;
    padding: 40px 80px;
  }
  .detail-section h2 {
    color: #fff;
    font-size: 52px;
    font-weight: 700;
    margin-bottom: 30px;
    font-style: italic;
  }
  .detail-section span {
    color: #d2d1d1;
    font-size: 24px;
    font-weight: 300;
    margin-bottom: 50px;
  }
  .detail-section p {
    color: #fff;
    font-size: 24px;
    font-weight: 400;
    margin-bottom: 0;
  }
  .video-grid {
    width: 100%;
    height: 570px;
    padding: 0;
    margin: 0;
  }
  :root {
    --swiper-navigation-color: #95b94d;
  }
  @media (max-width: 768px) {
    .slider-item {
      display: flex;
      flex-direction: column;
    }
    .detail-section {
      width: 100%;
      padding: 10px;
    }
    .detail-section h2 {
      font-size: 32px;
      margin-bottom: 30px;
    }
    .brandImage {
      width: 200px;
    }
  }
</style>
<div class="slider-container page-width">
  <swiper-container class="mySwiper" navigation="true">
    {% for block in section.blocks %}
      <swiper-slide>
        <div class="slider-item">
          <div class="detail-section">
            <h2>{{ block.settings.slider_title }}</h2>
            <span>{{ block.settings.slider_with }}</span>
            <p>{{ block.settings.slider_corporation }}</p>
            <img class="brandImage" src="{{ block.settings.corporation_logo | img_url: 'original' }}" alt="">
          </div>
          <div class="video-grid">
            <iframe
              width="100%"
              height="570"
              src="{{ block.settings.slider_link }}"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </swiper-slide>
    {% endfor %}
  </swiper-container>
</div>

{% schema %}
{
  "name": "Landing Video Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "landing_hero_image",
      "label": "Hero Header Image"
    }
  ],
  "blocks": [
    {
      "name": "Video Slider",
      "type": "slider",
      "settings": [
        {
          "type": "text",
          "id": "slider_title",
          "label": "Slider Title",
          "default": "'What I wish I'd known about menopause'"
        },
        {
          "type": "text",
          "id": "slider_with",
          "label": "Video With",
          "default": "with Jo Pybus"
        },
        {
          "type": "text",
          "id": "slider_corporation",
          "label": "Video Corporation",
          "default": "in cooperation with"
        },
        {
          "type": "image_picker",
          "id": "corporation_logo",
          "label": "Corporation Logo"
        },
        {
          "type": "text",
          "id": "slider_link",
          "label": "Youtube Share Video Link",
          "default": "https://www.youtube.com/embed/Ewxljuto1Xs?controls=0"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Landing Video Slider",
      "blocks": [
        {
          "type": "slider"
        }
      ]
    }
  ]
}
{% endschema %}
